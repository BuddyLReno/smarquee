{
  "name": "smarquee",
  "version": "0.1.0",
  "description": "A smart scrolling marquee for audio players and other scrolling text needs.",
  "author": "Buddy Reno <thebudman84+smarquee@gmail.com> (https://buddyreno.dev)",
  "license": "GPL-2.0",
  "main": "dist/smarquee.min.js",
  "scripts": {
    "compile": "NODE_ENV=production node_modules/webpack/bin/webpack.js --progress --hide-modules --config=webpack.config.js && cp dist/smarquee.min.js demo",
    "test": "jest",
    "demo": "browser-sync start --server 'demo' --files 'demo'",
    "build:demo": "sass src/stylesheets/demo.scss demo/demo.css",
    "build": "yarn run build:demo",
    "lint-staged": "lint-staged",
    "prettier-all": "prettier --write '{src,tests}/**/*.js'"
  },
  "pre-commit": [
    "lint-staged"
  ],
  "lint-staged": {
    "{src, tests}/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/BuddyLReno/smarquee.git"
  },
  "bugs": {
    "url": "https://github.com/BuddyLReno/smarquee/issues"
  },
  "homepage": "https://github.com/BuddyLReno/smarquee#readme",
  "devDependencies": {
    "@babel/cli": "^7.2.3",
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.4",
    "babel-loader": "^8.0.5",
    "browser-sync": "^2.26.3",
    "jest": "^24.5.0",
    "lint-staged": "^8.1.5",
    "pre-commit": "^1.2.2",
    "prepack-webpack-plugin": "^1.1.2",
    "prettier": "^1.16.4",
    "sass": "^1.17.0",
    "webpack": "^4.29.6",
    "webpack-cli": "^3.3.0"
  },
  "dependencies": {}
}
